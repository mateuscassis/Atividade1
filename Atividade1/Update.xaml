<Window x:Class="Atividade1.Update"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Atividade1"
        mc:Ignorable="d"
        Title="Update" Height="282" Width="341">
    <Grid Margin="0,0,0,6">
        <Button Command ="{Binding botaoUpdate}" Content="Ok" HorizontalAlignment="Left" Margin="54,179,0,0" VerticalAlignment="Top" Height="44" Width="71"/>
        <Label Content="Nome:" HorizontalAlignment="Left" Margin="31,25,0,0" VerticalAlignment="Top"/>
        <Label Content="CPF:" HorizontalAlignment="Left" Margin="31,87,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.526,0.618"/>
        <TextBox HorizontalAlignment="Left" Margin="81,29,0,0" TextWrapping="Wrap" Text="{Binding Nome}" VerticalAlignment="Top" Width="204"/>
        <TextBox HorizontalAlignment="Left" Margin="81,91,0,0" TextWrapping="Wrap" Text="{Binding Cpf}" VerticalAlignment="Top" Width="204"/>
        <Button Content="Cancelar" HorizontalAlignment="Left" Margin="213,179,0,0" VerticalAlignment="Top" Height="44" Width="72"/>

    </Grid>
</Window>
